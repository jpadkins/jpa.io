*
    -webkit-text-size-adjust: none

@font-face
    font-family: Consolas
    src: url('../fonts/Inconsolata-Regular.ttf')

@font-face
    font-family: Raleway
    src: url('../fonts/Raleway-Regular.ttf')


html,
body
    padding: 0
    margin: 0
    font-family: Consolas 
    background-image: url('../images/background.png')

#sidebar 
    -webkit-box-shadow: 10px 10px 5px -2px #888
    box-shadow: 10px 10px 5px -2px #888
    border-radius: 2px
    background-color: #351C75 
    color: white
    img
        border: 3px solid white
        border-radius: 100px 
        width: 200px
        height: 200px
        display: block
        margin: auto
    h3
        padding: 10px
    h3:hover
        background-color: #492F8D
        cursor: pointer
        border-radius: 20px
    h3.active_cat
        background-color: #492F8D
    h3.active_cat:hover
        border-radius: 0px

#content
    h1
        font-family: Consolas
        font-weight: bold
    p
        font-family: Raleway
        font-size: 20px
    #article_footer
        position: absolute
        bottom: 0
        right: 0
        
// MEDIA QUERIES

@media (min-width: 320px) 
    #content
        padding-bottom: 50px
        padding-top: 50px
        p
            margin-left: 20px
            margin-right: 20px

@media (min-width: 480px)
    #content
        padding-bottom: 50px
        padding-top: 50px
        p
            margin-left: 20px
            margin-right: 20px

@media (min-width: 600px) 
    #content
        padding-bottom: 70px
        padding-top: 70px
        h3
            margin-top: 30px
        p
            margin-left: 50px 
            margin-right: 50px

@media (min-width: 768px) 
    #content
        padding-bottom: 70px
        padding-top: 70px
        h3
            margin-top: 30px
        p
            margin-left: 50px
            margin-right: 50px

@media (min-width: 900px) 
    #sidebar
        top: 0
        bottom: 0
        left: 0
        height: 100%
        position: fixed
        z-index: 1000
    
    #content
        overflow: hidden
        left: 25%
        padding-left: 50px
        padding-right: 50px
        padding-bottom: 100px
        padding-top: 100px
        h3
            margin-top: 50px
        p:nth-of-type(1)
            margin-top: 70px
        p
            margin-left: 70px
            margin-right: 70px

@media (min-width: 1200px) 
    #sidebar
        top: 0
        bottom: 0
        left: 0
        height: 100%
        position: fixed
        z-index: 1000

    #content 
        overflow: hidden 
        left: 25%
        padding-left: 50px
        padding-right: 50px
        padding-bottom: 100px
        padding-top: 100px
        h3
            margin-top: 50px
        p:nth-of-type(1)
            margin-top: 70px
        p
            margin-left: 70px
            margin-right: 20px 

